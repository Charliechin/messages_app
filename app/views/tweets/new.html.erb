<section id="tweets">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 text-center">
        <h1>Send a tweet!</h1>
        <p id="tweet-description">This is tweet view</p>
      </div>
      <div class="col-sm-6 col-sm-offset-3">

        <div class="card">
          <div class="card-header">
            <p>Fajsl</p>
            <div class="card-content">


              <%= form_for @tweet, url: messages_tweets_path do |f| %>
                <p>
                <%= f.label :sender %><br/>
                <%= f.text_field :sender, maxlength: 15, :value => @sender %>
                </p>

                <p>
                <%= f.label :body %><br/>
                <%= f.text_area :body, :maxlength => 120%>
                </p>
                <%= f.hidden_field :header, :value => @header %>

                <%= f.submit "Create Tweet", class:"btn btn-warning btn-fill" %>
              <% end %>
            </div>
          </div>
        </div>



      </div>
    </div>
  </div>
</section>
